            </div>
            <div class="form-group">
                <label asp-for="Medication" class="control-label"></label>
                <input asp-for="Medication" class="form-control" />
                <span asp-validation-for="Medication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructions" class="control-label"></label>
                <input asp-for="Instructions" class="form-control" />
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repeats" class="control-label"></label>
                <input asp-for="Repeats" class="form-control" />
                <span asp-validation-for="Repeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatsLeft" class="control-label"></label>
                <input asp-for="RepeatsLeft" class="form-control" />
