@model IEnumerable<hmsAPI2.Models.FirstVisit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChronicHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentChronicMedication)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KnownAllegies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChronicHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentChronicMedication)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KnownAllegies)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VisitId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VisitId">Details</a> |
